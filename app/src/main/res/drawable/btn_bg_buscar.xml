<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/loginFormDetails" android:width="2dp"/>
            <corners android:radius="25dp" />
            <gradient
                android:startColor="@color/backgroundDarkGreen"
                android:endColor="@color/backgroundGreen"
                android:angle="-45" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:color="@color/colorPrimaryDark" android:width="2dp"/>
            <corners android:radius="25dp" />
            <gradient
                android:startColor="@color/backgroundDarkGreen"
                android:endColor="@color/backgroundGreen"
                android:angle="90" />
        </shape>
    </item>
</selector>